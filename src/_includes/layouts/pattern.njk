{% extends 'layouts/base.njk' %}
{% set pageType = 'Pattern' %}

{# Intro content #}
{% set introHeading = "How to Make " + title %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="[ post ] [ h-entry ]">
      {% include "partials/components/intro.njk" %}
      <div class="[ post__body ] [ inner-wrapper ] [ leading-loose pad-top-900 pad-bottom-900 text-500 ] [ sf-flow ] [ e-content ]">
        <div class="video-player">
          <iframe id="player" type="text/html"
                  width="792" height="482"
                  src="https://www.youtube-nocookie.com/embed/{{ video }}"
                  frameborder="0"
                  ></iframe>
        </div>
        
        {{ content | safe }}

        {% if pdf %}
          <hr>
          <p><a class="button" href="{{ pdf }}" download type="application/pdf">Download PDF Instructions</a></p>
        {% endif %}
      </div>
    </article>
  </main>
{% endblock %}

{{ content | safe }}
